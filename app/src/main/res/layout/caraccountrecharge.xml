<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_height="wrap_content" android:layout_width="wrap_content"
 android:background="#000000" android:orientation="vertical"
 android:id="@+id/dialog">
	 <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="10dip"
		android:scrollbars="vertical" >
		<EditText android:id="@+id/et_carid"
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:minWidth="100dip"
			android:layout_marginLeft="80dp"
			android:inputType="number"
			android:maxLength="1"
			android:hint="小车编号：1-4"/>
		<TextView android:id="@+id/tvcarid"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignTop="@+id/et_carid"
			android:layout_marginTop="10dp"
			android:textSize="18sp"
			android:text="小车ID：" />	   
		
		<EditText android:id="@+id/et_carmoney"
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:layout_below="@+id/et_carid"
			android:minWidth="100dip"
			android:inputType="number"
			android:maxLength="4"
			android:hint="1-9999"
			android:layout_marginLeft="80dp"/>
		<TextView android:id="@+id/tvcarmoney"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignTop="@+id/et_carmoney"
			android:layout_marginTop="10dp"
			android:textSize="18sp"
			android:text="充值金额：" />	 
			
	 
	</RelativeLayout> 
</LinearLayout>